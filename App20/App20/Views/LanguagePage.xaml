<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App20.Views.LanguagePage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:viewmodel="clr-namespace:App20.ViewModels">
    
    <ContentPage.BindingContext>
        <viewmodel:LanguagePageViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" >
            <Label Text="{xct:Translate Text}"/>
            <Picker ItemsSource="{Binding SupportedLanguages}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedLanguage}"></Picker>
            <Button Text="{xct:Translate Save}"
                    Command="{Binding ChangeLanguageCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>