<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App20.ViewModels"
             x:Class="App20.Views.LoginPage"
             xmlns:controls="clr-namespace:App20.Controls"
             NavigationPage.HasBackButton="False">
    <ContentPage.BindingContext>
        <local:LoginPageViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <controls:CustomButton Image="RightArrow.png" HeightRequest="80" Margin="5" FontSize="30" TextColor="Black" FrameBackgroundColor="Gray" Text="LOGIN" Command="{Binding LoginCommand}"
/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>